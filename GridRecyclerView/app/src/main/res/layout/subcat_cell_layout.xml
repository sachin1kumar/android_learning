<?xml version="1.0" encoding="utf-8"?>

<com.recycler.sachin.gridrecyclerview.helper.SubCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clickable="true"
    card_view:cardCornerRadius="1dp"
    card_view:cardUseCompatPadding="true"
    android:id="@+id/id_subcatCard"
    >
    <FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:id="@+id/subcatimage_id"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:background="#000000"
            android:gravity="center"
            android:padding="5dp"
            android:minHeight="60dp"
            android:id="@+id/subcattext_id"
            android:textColor="@android:color/white"
            android:textSize="16sp"/>


    </FrameLayout>

</com.recycler.sachin.gridrecyclerview.helper.SubCardView>